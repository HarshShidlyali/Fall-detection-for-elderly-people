#include <Arduino.h>

const int cancelButtonPin = 2;

void setup() {
  Serial.begin(115200);
  pinMode(cancelButtonPin, INPUT_PULLUP);
}

void loop() {
  // Check cancel button
  if (digitalRead(cancelButtonPin) == LOW) {
    Serial.println("CANCELLED!");
    delay(300); // Prevent multiple triggers
  }
  
  // Your normal code
  Serial.println("Working...");
  delay(500);
}
